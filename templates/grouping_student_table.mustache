{{!
    @template mod_googledocs/grouping_student_table

    Google docs grouping table content template.

    Example context (json): TODO: Add JSON struct.
    
}}
<div class="container-fluid table-container">
    <table class="mod-googledocs-files-view  table-bordered table-lg overviewTable table table-hover" 
        data-googledocs-id = "{{googledocid}}" data-instance-id = "{{instanceid}}" 
        data-from-existing = "{{from_existing}}" data-owner-email = "{{owneremail}}" 
        data-grouping-ids = "{{all_groupings}}">
        <thead>
            <tr>
                <th class="checkbox-column"></th>
                <th class ="table-student-columns">Full name</th>
                <th class ="table-student-columns">Links</th>
                <th class ="table-student-columns">Status</th>
            </tr>
        </thead>

        <tbody  class = "table-striped">
            {{#students}}
                <tr data-student-id ="{{student-id}}" data-student-email="{{student-email}}" student-name="{{fullname}}"
                    student-grouping-id ="{{student-groupingid}}">
                    <td>{{{checkbox}}}</td>
                    <td  class="fullname-column">{{{picture}}}</td>
                    <td>{{{link}}}</td>
                    <td>{{{status}}}</td>
                </tr>
            {{/students}}
        </tbody>
    </table>
</div>