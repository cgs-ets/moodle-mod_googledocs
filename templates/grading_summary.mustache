{{!
    @template mod_googledocs/group_table
}}
<div role="main">
   <span id="maincontent"></span>
   <h2>{{title}}</h2>

   <div class="gradingsummary">
      <h3>Grading summary</h3>
      <div class="box py-3 boxaligncenter gradingsummarytable">
         <table class="generaltable">
            <tbody>
               <tr class="">
                  <th class="cell c0" style="" scope="row">Participants</th>
                  <td class="cell c1 lastcol" style="">{{participants}}</td>
               </tr>
               <tr class="">
                  <th class="cell c0" style="" scope="row">Submitted</th>
                  <td class="cell c1 lastcol" style="">{{submitted}}</td>
               </tr>
               <tr class="lastrow">
                  <th class="cell c0" style="" scope="row">Needs grading</th>
                  <td class="cell c1 lastcol" style="">{{submitted}}</td>
               </tr>
            </tbody>
         </table>
      </div>
      <center>
         <div class="submissionlinks">
            <a class="btn btn-secondary" href={{{url}}}>{{viewgrading}}</a>
            <a class="btn btn-primary ml-1" href={{{url}}}>Grade</a></div>
      </center>
   </div>
</div>