{{!
    @template mod_googledocs/grading_panel

    Shown a place holder until the real content is fetched via ajax.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * None

    Context variables required for this template:
    * None

}}
<div data-region="grade" id="grading-panel-container" data-googledocid="{{googledocid}}" class="row">
{{#display}}
    <div class="grading-panel col-lg-9 col-sm-12">
        <iframe id='ifile' src="{{fileurl}}"></iframe>
    </div>
  
    <div class ='grade-div col-lg-3'>
        <h4>Grade</h4>
      {{!  <p>Grade out of {{maxgrade}} </p> 
        {{#lockedoroverriden}}       
         <p>
           {{#str}} gradelockedoroverrideningradebook, mod_googledocs {{/str}}
         </p>
        {{/lockedoroverriden}}
  
            <form id="gradeform" >
                <div class="mb-3">
                    <label for="quickgrade_{{userid}}" class="form-label">Grade out of {{maxgrade}}</label>
                    <div class='input-group'>
                        <input type="text" id="quickgrade_{{userid}}" name="grade" class="form-control" {{#lockedoroverriden}} disabled {{/lockedoroverriden}}
                        value= "{{gradegiven}}" size="6" maxlength="10" class="grade-input" form="gradeform" >
                        <span class = "input-group-addon " {{^graded}}hidden{{/graded}}>
                            <span class="input-group-text bg-success-graded"  >Graded</span>
                        </span>
                    </div>    
                    <div class="form-control-feedback invalid-feedback" id="id_error_grade" style="display: block;" hidden>
                          Grade must be greater than or equal to zero.
                    </div> 
                     {{#lockedoroverriden}}
                        {{#str}} currentgradeingradebook, mod_googledocs {{/str}} <br>
                         <a href="{{gradebookurl}}" >{{finalgrade}}</a> 
                     {{/lockedoroverriden}}
                <textarea class="textarea-comment form-control" name="comment" rows = "5" cols = "50"  form="gradeform">{{commentgiven}}</textarea>
                </div>
    
                <input type = "submit" name = "savechanges" value = "Save changes" class="btn btn-primary ml-1 submit-comment">
                <input type = "submit" name = "saveandshownext" value = "Save and show next" class="btn btn-primary ml-1 submit-comment">
    </div>
            </form>
{{/display}}


</div>