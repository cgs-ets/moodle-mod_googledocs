{{!
    @template mod_googledocs/grading_panel

    Shown a place holder until the real content is fetched via ajax.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * None

    Context variables required for this template:
    * None

}}
<div data-region="grade" id="grading-panel-container" data-googledocid="{{googledocid}}" class="row">
{{#display}}
    
    {{#isfolder}}
        {{^isloggedintogoogle}}
            <div id = 'viewfolder'>
                <button  type= "button" id= "googlebtn" class="btn-primary btn disabled" >{{#str}}logintoviewfolder, mod_googledocs{{/str}}</button>
                <button  type= "button" id= "googlebtnlogout" class="btn-primary btn" data-toggle="tooltip" data-placement="top"
                data-original-title="{{#str}}whylogout, mod_googledocs{{/str}}">{{#str}}signout, mod_googledocs{{/str}}</button>
                
                {{#js}}
                    require(['mod_googledocs/google_login'], function(mod) {
                      mod.init();
                    });                
                {{/js}}
                

            </div>
        {{/isloggedintogoogle}}
        
        {{#isloggedintogoogle}}
            {{^isempty}}
                <div class="grading-panel col-lg-9 col-sm-12 ">
                    <iframe id='ifile' src="{{fileurl}}"></iframe>
                </div>
            {{> mod_googledocs/grader }}
            {{/isempty}}
                
            {{#isempty}}
                <div id = 'viewfolder'>
                    <h2>{{#str}}emptyfoldermessage, mod_googledocs{{/str}}</h2>
                </div>
            {{/isempty}}
        {{/isloggedintogoogle}}
    {{/isfolder}}
    
    {{^isfolder}}
        <div class="grading-panel col-lg-9 col-sm-12 ">           
            <iframe id='ifile' src="{{fileurl}}"></iframe>
        </div>
    {{> mod_googledocs/grader }}
    {{/isfolder}}   

{{/display}}


</div>