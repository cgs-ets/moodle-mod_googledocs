{{!
    @template mod_googledocs/grouping_table

    Google docs group content template.

    Example context (json): TODO

}}
<div class="container-fluid table-container table-responsive">

    <table class = "mod-googledocs-files-view  table-bordered table-lg overviewTable table table-hover"
        data-owner-email = "{{owneremail}}" data-instance-id = "{{instanceid}}"
        data-googledocs-id = "{{docid}}" data-from-existing = "{{from_existing}}" >

        <thead class="thead-light">
            <tr>
                <th class="header ">Groupings</th>
                <th class="header ">Members</th>
                <th class="header">Link</th>
                <th class="header">Status</th>
                <th class="header">Student access</th>
                <th class="header">Grade</th>
            </tr>
        </thead>
        <tbody >
            {{#groupings}}
            {{#groupingdetails}}
                <tr id = "grouping_{{groupingid}}"  aria-expanded="false"
                    aria-controls="grouping-{{groupingid}}" data-grouping-name="{{groupingdname}}" data-grouping-id="{{groupingid}}" >
                    <td class="group-name-column" >
                        <span >{{groupingdname}}<span>
                    </td>
                    <td>{{{memberspictures}}}</td>
                    <td id = "shared-link-grouping-id-{{groupingid}}" 
                        class = "status-link-column"> {{{fileicon}}}
                    </td>
                    <td class = "status-link-column">{{{sharingstatus}}}</td>
                    <td>
                        <a href= "{{{gradeurl}}}" class="btn btn-primary btn-grade"> 
                        Edit </a>
                    </td>
                    <td>
                        <a href= "{{{gradeurl}}}" class="btn btn-primary btn-grade"> 
                        Grade </a>
                    </td>
                </tr>

        </tbody>
        {{/groupingdetails}}
     {{/groupings}}
    </table>
</div>


